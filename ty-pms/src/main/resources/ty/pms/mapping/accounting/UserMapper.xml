<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ty.pms.dao.user.UserMapper">

	<resultMap id="userResultMap" type="user">
		<id column="userId" property="userId" jdbcType="VARCHAR" />
		<result column="userName" property="userName" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		
		<result column="occurrencedTime" property="occurrencedTime" jdbcType="TIMESTAMP" />
		<result column="endTime" property="endTime" jdbcType="TIMESTAMP" />
		<result column="createdTime" property="createdTime" jdbcType="TIMESTAMP" />
		<result column="lastModifyTime" property="lastModifyTime" jdbcType="TIMESTAMP" />
		
		<result column="owner" property="owner" jdbcType="VARCHAR" />
		<result column="createdBy" property="createdBy" jdbcType="VARCHAR" />
		<result column="updatedBy" property="updatedBy" jdbcType="VARCHAR" />
		
		<result column="remark" property="remark" jdbcType="VARCHAR" />
		
		<result column="delFlag" property="delFlag" jdbcType="TINYINT" />
	</resultMap>
	<!-- 列举所有字段 -->
	<sql id="allColumns">
		userId,userName,password,
		occurrencedTime,endTime,createdTime,lastModifyTime,
  		owner,createdBy,updatedBy,remark,delFlag
	</sql>
	<!-- 统计查询结果数 -->
	<sql id="selectCount">
		SELECT COUNT(*) FROM
	</sql>
	<!-- 根据发生时间降序排序 -->
	<sql id="occurrencedTimeOrderDESC">
		ORDER BY occurrencedTime DESC
	</sql>
	
	<delete id="deleteByPrimaryKey" parameterType="int">
		delete from user
		where userId = #{userId,jdbcType=VARCHAR}
	</delete>
	
	<insert id="insert" parameterType="userCriteria">
		insert into user (<include refid="allColumns" />)
		values(
		#{userId,jdbcType=VARCHAR},
		#{userName,jdbcType=VARCHAR}, 
		#{password,jdbcType=VARCHAR},	
		#{occurrencedTime,jdbcType=TIMESTAMP},
		#{endTime,jdbcType=TIMESTAMP},
		#{createdTime,jdbcType=TIMESTAMP},
		#{lastModifyTime,jdbcType=TIMESTAMP},
		#{owner,jdbcType=VARCHAR},
		#{createdBy,jdbcType=VARCHAR}, 
		#{updatedBy,jdbcType=VARCHAR},
		#{remark,jdbcType=VARCHAR}, 
		#{delFlag,jdbcType=TINYINT})
	</insert>
	
	<insert id="insertSelective" parameterType="userCriteria">
		insert into user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="userId != null">
				userId,
			</if>
			<if test="userName != null">
				userName,
			</if>
			<if test="password != null">
				password,
			</if>
			
			<if test="occurrencedTime != null">
				occurrencedTime,
			</if>
			<if test="endTime != null">
				endTime,
			</if>
			<if test="lastModifyTime != null">
				lastModifyTime,
			</if>
			<if test="createdTime != null">
				createdTime,
			</if>
			<if test="owner != null">
				owner,
			</if>
			<if test="createdBy != null">
				createdBy,
			</if>
			<if test="updatedBy != null">
				updatedBy,
			</if>
			<if test="remark != null">
				remark,
			</if>
			<if test="delFlag != null">
				delFlag
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="userId != null">
				#{userId,jdbcType=VARCHAR},
			</if>
			<if test="userName != null">
				#{userName,jdbcType=VARCHAR},
			</if>
			<if test="password != null">
				#{password,jdbcType=VARCHAR},
			</if>
			<if test="occurrencedTime != null">
				#{occurrencedTime,jdbcType=TIMESTAMP},
			</if>
			<if test="endTime != null">
				#{endTime,jdbcType=TIMESTAMP},
			</if>
			<if test="lastModifyTime != null">
				#{lastModifyTime,jdbcType=TIMESTAMP},
			</if>
			<if test="createdTime != null">
				#{createdTime,jdbcType=TIMESTAMP},
			</if>
			<if test="owner != null">
				#{owner,jdbcType=VARCHAR},
			</if>
			<if test="createdBy != null">
				#{createdBy,jdbcType=VARCHAR},
			</if>
			<if test="updatedBy != null">
				#{updatedBy,jdbcType=VARCHAR},
			</if>
			<if test="remark != null">
				#{remark,jdbcType=VARCHAR}, 
			</if>
			<if test="delFlag != null">
				#{delFlag,jdbcType=TINYINT}
			</if>
		</trim>
	</insert>
	
	<update id="updateByPrimaryKeySelective" parameterType="userCriteria">
		update user
		<set>
			<if test="userName != null">
				userName = #{userName,jdbcType=VARCHAR},
			</if>
			<if test="password != null">
				password = #{password,jdbcType=VARCHAR},
			</if>
			<if test="occurrencedTime != null">
				occurrencedTime=#{occurrencedTime,jdbcType=TIMESTAMP},
			</if>
			<if test="endTime != null">
				endTime=#{endTime,jdbcType=TIMESTAMP},
			</if>
			<if test="lastModifyTime != null">
				lastModifyTime=#{lastModifyTime,jdbcType=TIMESTAMP},
			</if>
			<if test="createdTime != null">
				createdTime=#{createdTime,jdbcType=TIMESTAMP},
			</if>
			<if test="owner != null">
				owner=#{owner,jdbcType=VARCHAR},
			</if>
			<if test="createdBy != null">
				createdBy=#{createdBy,jdbcType=VARCHAR},
			</if>
			<if test="updatedBy != null">
				updatedBy=#{updatedBy,jdbcType=VARCHAR},
			</if>
			<if test="remark != null">
				remark=#{remark,jdbcType=VARCHAR}, 
			</if>
			<if test="delFlag != null">
				delFlag=#{delFlag,jdbcType=TINYINT}
			</if>
		</set>
		where userId = #{userId,jdbcType=VARCHAR}
	</update>
	
	<update id="updateByPrimaryKey" parameterType="userCriteria">
		update user 
		set 
		userName = #{userName,jdbcType=VARCHAR},
		password = #{password,jdbcType=VARCHAR},
		occurrencedTime=#{occurrencedTime,jdbcType=TIMESTAMP}),
		endTime=#{endTime,jdbcType=TIMESTAMP}),
		createdTime=#{createdTime,jdbcType=TIMESTAMP}),
		lastModifyTime=#{lastModifyTime,jdbcType=TIMESTAMP}),
		owner=#{owner,jdbcType=VARCHAR},
		createdBy=#{createdBy,jdbcType=VARCHAR}, 
		updatedBy=#{updatedBy,jdbcType=VARCHAR}),
		remark=#{remark,jdbcType=VARCHAR}, 
		delFlag=#{delFlag,jdbcType=TINYINT})
		where
		userId = #{userId,jdbcType=VARCHAR}
	</update>
	
	<select id="selectByPrimaryKey" resultMap="userResultMap" parameterType="str">
		select
		<include refid="allColumns" />
		from user
		where userId = #{userId,jdbcType=VARCHAR} and delFlag=0
	</select>

	<select id="selectUserByName" resultMap="userResultMap" parameterType="str">
		select
		<include refid="allColumns" />
		from user
		where userName = #{userName,jdbcType=VARCHAR} and delFlag=0
	</select>
	
	<select resultType="int" id="getAllCount">
		<include refid="selectCount" /> USER
	</select>
	
	<select id="getAll" resultMap="userResultMap">
		select
		<include refid="allColumns" />
		from user 
		where delFlag=0
		<include refid="occurrencedTimeOrderDESC" />
	</select>
    
    <select id="getUsersCount" resultType="int" parameterType="userCriteria">
    	<include refid="selectCount" /> USER
    	<where>
    		delFlag=0
    		<if test="userName != null">
				and userName = #{userName},
			</if>
			<if test="userNameList != null">
   			 	and userName in
		      	<foreach collection="userNameList" item="userName" index="index" open="(" close=")" separator=",">
		            #{userName}
		        </foreach>
  			</if>
  			
			<if test="password != null">
				and password = #{password},
			</if>
			
			<if test="occurrencedTime != null">
				and occurrencedTime=#{occurrencedTime},
			</if>
			<if test="createdTimeBegin != null">
				<![CDATA[
				and occurrencedTime>=#{createdTimeBegin},
				]]>     
			</if>
			<if test="createdTimeEnd != null">
				<![CDATA[
				and occurrencedTime<=#{createdTimeEnd},
				]]>     
			</if>
			
			<if test="occurrencedTime != null">
				and occurrencedTime=#{occurrencedTime},
			</if>
			
			<if test="endTime != null">
				and endTime=#{endTime},
			</if>
			
			<if test="lastModifyTime != null">
				and lastModifyTime=#{lastModifyTime},
			</if>
			
			<if test="createdTime != null">
				and createdTime=#{createdTime},
			</if>
			
			<if test="owner != null">
				and owner=#{owner},
			</if>
			
			<if test="createdBy != null">
				and createdBy=#{createdBy},
			</if>
			
			<if test="updatedBy != null">
				and updatedBy=#{updatedBy},
			</if>
			
			<if test="remark != null">
				 and remark like CONCAT('%','${remark}','%' )   
			</if>
			
    	</where>
    </select>
    <select id="getUsers" resultMap="userResultMap" resultType="userResult" parameterType="userCriteria">
    	select <include refid="allColumns" /> from user 
    	<where>
    		delFlag=0
    		<if test="userName != null">
				and userName = #{userName},
			</if>
			<if test="userNameList != null">
   			 	and userName in
		      	<foreach collection="userNameList" item="userName" index="index" open="(" close=")" separator=",">
		            #{userName}
		        </foreach>
  			</if>
  			
			<if test="password != null">
				and password = #{password},
			</if>
			
			<if test="occurrencedTime != null">
				and occurrencedTime=#{occurrencedTime},
			</if>
			<if test="createdTimeBegin != null">
				<![CDATA[
				and occurrencedTime>=#{createdTimeBegin},
				]]>     
			</if>
			<if test="createdTimeEnd != null">
				<![CDATA[
				and occurrencedTime<=#{createdTimeEnd},
				]]>     
			</if>
			
			<if test="occurrencedTime != null">
				and occurrencedTime=#{occurrencedTime},
			</if>
			
			<if test="endTime != null">
				and endTime=#{endTime},
			</if>
			
			<if test="lastModifyTime != null">
				and lastModifyTime=#{lastModifyTime},
			</if>
			
			<if test="createdTime != null">
				and createdTime=#{createdTime},
			</if>
			
			<if test="owner != null">
				and owner=#{owner},
			</if>
			
			<if test="createdBy != null">
				and createdBy=#{createdBy},
			</if>
			
			<if test="updatedBy != null">
				and updatedBy=#{updatedBy},
			</if>
			
			<if test="remark != null">
				 and remark like CONCAT('%','${remark}','%' )   
			</if>
			
    	</where>
    	<include refid="occurrencedTimeOrderDESC" />
    </select>
    
</mapper>